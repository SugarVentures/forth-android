<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_dark_blue</item>
        <item name="colorPrimaryDark">@color/color_dark_blue</item>
        <item name="colorAccent">@color/color_yellow_orange</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="StyleTextWhite14SP">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="StyleTextWhite16SP">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="StyleTextOrange10sp">
        <item name="android:textColor">@color/color_yellow_orange</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="StyleTextBlack14SP">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="StyleTextGray10SP">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="StyleTextOrange14SP">
        <item name="android:textColor">@color/color_yellow_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="App_Button_Theme_Disable">
        <item name="android:background">@color/color_dark_yellow_orange</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
</resources>
